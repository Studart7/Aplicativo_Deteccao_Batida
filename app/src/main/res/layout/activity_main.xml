<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Texto que mostrará o estado do acelerômetro -->
    <TextView
        android:id="@+id/tvAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acelerômetro"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Texto que mostrará o estado do giroscópio -->
    <TextView
        android:id="@+id/tvGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giroscópio"
        android:layout_below="@id/tvAccelerometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp" />

    <!-- Texto que mostrará alertas de impacto/batida -->
    <TextView
        android:id="@+id/tvCrashAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detectando..."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_below="@id/tvGyroscope"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/gridConfusionMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGyroscope"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:background="#E0E0E0">

        <!-- Placeholder TextViews for the matrix cells -->
        <TextView
            android:id="@+id/cell00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0"
            android:gravity="center"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/cell01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0"
            android:gravity="center"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/cell10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0"
            android:gravity="center"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/cell11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0"
            android:gravity="center"
            android:background="#FFFFFF" />
    </GridLayout>

    <com.example.deteccaobatida.ConfusionMatrixView
        android:id="@+id/confusionMatrixView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCrashAlert"
        android:layout_marginTop="16dp" />
</RelativeLayout>